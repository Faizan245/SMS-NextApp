{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev\" \"electron .\"",
    "build": "next build && electron-builder",
    "start": "electron .",
    "lint": "next lint"
  },
  "main": "main.js",
  "build": {
    "appId": "com.example.myelectronapp",
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "concurrently": "^9.1.2",
    "electron-builder": "^25.1.8",
    "next": "15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "electron": "^33.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.1.3",
    "postcss": "^8",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^3.4.1"
  }
}
